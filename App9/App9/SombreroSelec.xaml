<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App9.SombreroSelec"
             Title="Sombrero Seleccionador"
             BackgroundImage ="sombrero.jpg" >

    <ContentPage.Content>
        <ScrollView>
            <StackLayout Orientation="Vertical" VerticalOptions="End">
                <Label Text="Bienvenido a Hogwarts, ponte el sombrero para descubrir a que casa perteneces" TextColor="White" />
                <Button x:Name="btnsombrero" Text="Usar" BackgroundColor="DarkGoldenrod" BorderColor="Goldenrod" RotationX="10"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>